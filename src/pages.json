{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/article/index",
      "style": {
        "navigationBarTitleText": "查看文章"
      }
    },
    {
      "path": "pages/editor/index",
      "style": {
        "navigationBarTitleText": "编辑器"
      }
    },
    {
      "path": "pages/photo-detail/index",
      "style": {
        "navigationBarTitleText": "照片详情"
      }
    },
    {
      "path": "pages/addPhotoPage/index",
      "style": {
        "navigationBarTitleText": "添加图片"
      }
    },

    {
      "path": "pages/addVideoPage/index",
      "style": {
