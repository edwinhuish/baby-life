      {
        "pagePath": "pages/editor/index",
        "text": "编辑器",
        "iconPath": "/static/tabBar/icon-tabbar-mine.png",
        "selectedIconPath": "/static/tabBar/icon-tabbar-mine-selected.png"
      },
      {
        "pagePath": "pages/article/index",
        "text": "富文本",
        "iconPath": "/static/tabBar/icon-tabbar-mine.png",
        "selectedIconPath": "/static/tabBar/icon-tabbar-mine-selected.png"
      }
    ]
  },
  "sitemapLocation": "sitemap.json",
  "globalStyle": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#fff",
    "navigationBarTitleText": "吕萧潇",
    "navigationBarTextStyle": "black",
    "enablePullDownRefresh": true,
    "onReachBottomDistance": 60,
    "usingComponents": {}
  }
